<?xml version="1.0"?>
<root main_tree_to_execute="ConeNavigationTree">
    <!-- 
    Behavior Tree for Cone Navigation
    Workflow: Go to cone → Wait → Turn 90° → Go to next cone
    -->
    <BehaviorTree ID="ConeNavigationTree">
        <Sequence name="ConeNavigationSequence">
            <GoToYellowCone name="GoToCone1" stop_distance="1.0" timeout="30.0"/>
            <Wait name="Wait1" duration="2.0"/>
            <TurnDegrees name="TurnRight90" degrees="-90.0" angular_speed="0.5"/>
            <Wait name="Wait2" duration="1.0"/>
            <GoToYellowCone name="GoToCone2" stop_distance="1.0" timeout="30.0"/>
            <Wait name="Wait3" duration="2.0"/>
            <TurnDegrees name="TurnRight90Again" degrees="-90.0" angular_speed="0.5"/>
        </Sequence>
    </BehaviorTree>
</root>
